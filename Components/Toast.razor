<div aria-live="polite" aria-atomic="true" style="position: absolute; min-height: 200px; top: 20px; right: 20px;">
<div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="true" data-animation="true" data-delay="@Delay" 
style="width: 300px; position: absolute; top: 0; right: 0;">
  <div class="toast-header">
    <!--img src="..." class="rounded mr-2" alt="..."-->
    <strong class="mr-auto">@Title</strong>
    <small>@Time</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    @Message
  </div>
</div>
</div>


@code {
    [Parameter]
    public string Title {get; set;}
    [Parameter]
    public string Time {get; set;}
    [Parameter]
    public string Message {get; set;}
    [Parameter]
    public int Delay {get; set;}
}